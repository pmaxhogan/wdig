{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/.well-known/assetlinks.json",
        "destination": "/well-known/assetlinks.json"
      },
      {
        "source": "**",
        "function": "nuxt"
      }
    ]
  },
  "functions": {
    "ignore": [
      "**/node_modules/**"
    ]
  }
}
